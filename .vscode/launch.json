{
    // VS Code launch profiles for HitNTry solution
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Launch HitNTry Dashboard",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "run",
                "--project",
                "src/HitNTry.Dashboard/HitNTry.Dashboard.csproj"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "stopAtEntry": false
        },
        {
            "name": ".NET Launch Orchestrator (Hosted Runtime)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "run",
                "--project",
                "src/HitNTry.Orchestration/HitNTry.Orchestration.csproj"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Test HitNTry Framework",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "test",
                "tests/HitNTry.Framework.Tests/HitNTry.Framework.Tests.csproj"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}