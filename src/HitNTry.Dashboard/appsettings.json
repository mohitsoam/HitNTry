{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Sql": "Server=(localdb)\\\\MSSQLLocalDB;Database=HitNTry;Trusted_Connection=True;",
    "ServiceBus": "Endpoint=sb://localhost/;SharedAccessKeyName=local;SharedAccessKey=local"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "SampleTopic": "hitntry.samples"
  },
  "HitNTry": {
    "Runtime": {
      "PluginRootPath": "Plugins",
      "WatchForChanges": true,
      "EnableHotReload": true
    },
    "Scheduler": {
      "Schedules": [
        {
          "PluginId": "SampleDataIngestion@1.0.0",
          "Interval": "00:05:00",
          "Description": "Sample plugin heartbeat",
          "Enabled": true
        }
      ]
    },
    "Triggers": {
      "RedisChannel": "hitntry.plugins",
      "ServiceBusQueue": "hitntry-plugins",
      "KafkaTopic": "hitntry.plugins",
      "KafkaGroupId": "hitntry-host"
    }
  }
}
